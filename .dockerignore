.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Python Development Files
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
*.egg-info/
dist/
build/
*.egg

# Environment and Secrets
.env
.env.local
.env.*.local
*.key
*.pem
secrets/

# CI/CD (not needed in container)
.github/
.gitlab-ci.yml
.travis.yml
Jenkinsfile

# Development Tools
Makefile
docker-compose.yml
docker-compose.*.yml

# Temporary Files
*.log
*.tmp
tmp/
temp/

